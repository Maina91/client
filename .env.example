# Server Configuration
NODE_ENV=development
API_URL=https://api.example.com

# Session Configuration
SESSION_SECRET=min-32-chars
SESSION_EXPIRY=expiry time in seconds (max 86400, i.e., 24 hours)
SESSION_COOKIE_DOMAIN=Domain for cookies (e.g., example.com, optional)

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=Enable rate limiting (true/false)
RATE_LIMIT_MAX_REQUESTS_PER_MINUTE=Max requests per minute per user/IP
RATE_LIMIT_WINDOW_MS=Rate limit window in milliseconds eg 60000
RATE_LIMIT_AUTH_MAX_REQUESTS=Max auth requests per window per IP eg 5
RATE_LIMIT_AUTH_WINDOW_MS=Auth rate limit window in milliseconds (5 minutes)
RATE_LIMIT_GLOBAL_MAX_REQUESTS=Global max requests per window eg 1000

# Client Configuration
VITE_APP_TITLE=Pension Portal
